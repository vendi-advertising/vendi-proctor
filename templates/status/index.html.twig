{% extends 'base.html.twig' %}

{% block title %}Status{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>TLS Status</h1>

    <table>
        <thead>
            <tr>
                <td>Status</td>
                <td>Domain</td>
                <td>Last Check</td>
                <td>TLS Valid From</td>
                <td>TLS Valid To</td>
                <td>Message</td>
            </tr>
        </thead>
        <tbody>
    {% for website in websites %}
        {% set last_scan = website.tlsScanResults | last %}
        {% if last_scan %}
            <tr>
                <td>
                    {% if 'valid' == last_scan.status %}
                        &#9989;
                    {% elseif 'error' == last_scan.status %}
                        &#10060;
                    {% elseif 'warning' == last_scan.status %}
                        &#9888;
                    {% else %}
                        &#8265;
                    {% endif %}
                </td>
                <td>{{ website.domain }}</td>
                <td>{{ last_scan.dateTimeCreated |date("Y-m-d H:i") }}</td>
                <td>{{ last_scan.dateValidFrom |date("Y-m-d H:i") }}</td>
                <td>{{ last_scan.dateValidTo |date("Y-m-d H:i") }}</td>
                <td>{{ last_scan.failReason }}</td>
            </tr>
        {% else %}
            <tr>
                <td>&#8252;</td>
                <td>{{ website.domain }}</td>
                <td>n/a</td>
                <td>n/a</td>
                <td>n/a</td>
                <td>n/a</td>
            </tr>
        {% endif %}
    {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
